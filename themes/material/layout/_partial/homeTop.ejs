        <!-- services long -->
        <% alter=0; site.posts.forEach(function(item){ %>
            <%  if(item.type=="services") { %>
            <div class="homeServicesLong">
                <div class="homeServicesLongHolder">
                    <div class="servicesLongImage <% if(alter<=0) { %>servicesLongImageLeft<% } else { %>servicesLongImageRight<% }  %>" style="background-image:url(<%- item.image %>);"></div>
                    <div class="servicesLong <% if(alter<=0) { %>servicesLongLeft<% } else { %>servicesLongRight<% }  %>">
                        <div class='servicesIconHolder'><h1><img src="<%- item.icon %>" border="0" class="serviceIcon" /><div class='iconTitle'><%- item.title %></div></h1></div>
                        <div class='<% if(alter<=0) { %>servicesLongTextLeft<% } else { %>servicesLongTextRight<% }  %>'><%- markdown(item.text) %>
                            <a href="#" class='learnmoreButton'>Learn more</a>
                        </div>
                    </div>
                </div>
            </div>
            <% if(alter<=0) { alter=1; } else { alter=0; }  %>
            <%  } %>
        <% }); %>


