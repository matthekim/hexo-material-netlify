<% site.posts.forEach(function(item){ %>
    <%  if(item.type=="homepage") { %>
        <div class="homeImageHolder" style="background-image:url(<%- item.image %>);"></div>
        <div class="logoCarousel"></div>
        <div class="homeContent">
            <div class="homeLeft">
                <%- markdown(item.textleft) %>
            </div>
            <div class="homeRight">
                <h1><%- item.title %></h1>
                <%- item.text %>
            </div>
        </div>
    <%  } %>
<% }); %>

<div class="homeServicesShort">
<!-- services short -->
<% site.posts.forEach(function(item){ %>
    <%  if(item.type=="services") { %>
            <div class="service">
                    <img src="<%- item.icon %>" border="0" class="serviceIcon" /><br>
                    <h2><%- item.title %></h2>
                <%- markdown(item.text) %>
            </div>
    <%  } %>
<% }); %>
</div>