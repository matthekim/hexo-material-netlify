<% site.posts.forEach(function(item){ %>
    <%  if(item.type=="homepage") { %>
        <div class="homeImageHolder" style="background-image:url(<%- item.image %>);"></div>
        <div class="logoCarousel"></div>
        <div class="homeContent">
            <div class="homeLeft">
                <%- markdown(item.textleft) %>
            </div>
            <div class="homeRight">
                <h1><%- item.title %></h1>
                <%- item.text %>
            </div>
        </div>
    <%  } %>
<% }); %>